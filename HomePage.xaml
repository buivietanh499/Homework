<Page
    x:Class="Group4_project.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Group4_project"
    Background="White">
    <Grid Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Tiêu đề + Logout -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!-- Tiêu đề Home căn trái -->
            <TextBlock x:Name="TextBlock1"
               Text="ホーム"
               FontSize="40"
               FontWeight="Bold"
               Foreground="#0078D7"
               VerticalAlignment="Center"
               HorizontalAlignment="Left" TextAlignment="Center" Margin="700,0,0,0" />
            <!-- Phần tên và logout căn phải -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" >
                <TextBlock x:Name="UserNameTextBlock"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#0078D7"
                   HorizontalAlignment="Right"
                   Margin="0,0,0,8"/>
                <Button Content="ログアウト"
                Click="Logout_Click"
                Width="130"
                Height="44"
                FontSize="16"
                Background="Transparent"
                BorderBrush="#0078D7"
                BorderThickness="2"
                Foreground="#0078D7"
                CornerRadius="6"
                HorizontalAlignment="Right" />
            </StackPanel>
        </Grid>
        <!-- Lịch -->
        <CalendarView x:Name="MyCalendarview"
                      SelectionMode="None"
                      FirstDayOfWeek="Monday"
                      HorizontalAlignment="Center"
                      Width="900"
                      Height="350"
                      Grid.Row="1"/>
        <!-- Các nút chức năng -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="30"
                    Margin="0,40,0,0">
            <Button x:Name="Button1"
                    Content="予約"
                    Width="220"
                    Height="60"
                    FontSize="18"
                    Background="#0078D7"
                    Foreground="White"
                    CornerRadius="6"
                    Click="TravelBookPage_Click"/>
            <Button x:Name="Button2"
                    Content="予約確認・削除"
                    Width="220"
                    Height="60"
                    FontSize="18"
                    Background="Transparent"
                    BorderBrush="#0078D7"
                    BorderThickness="2"
                    Foreground="#0078D7"
                    CornerRadius="6"/>
            <Button x:Name="Button3"
                    Content="プラン詳細"
                    Width="220"
                    Height="60"
                    FontSize="18"
                    Background="#0078D7"
                    Foreground="White"
                    CornerRadius="6"
                    Click="PlanDetailPage_Click"/>
        </StackPanel>
    </Grid>
</Page>
