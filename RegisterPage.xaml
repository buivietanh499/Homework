<Page
    x:Class="Group4_project.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Group4_project"
    Background="White">
    <Grid Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="660">
        <TextBlock Text="レジスター" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,69,0,120" Width="110"/>

        <StackPanel Spacing="15" Margin="30,128,30,30">
            <TextBlock Text="名前" FontWeight="SemiBold" />
            <TextBox x:Name="NameTextBox" PlaceholderText="名前を入力してください" />
            <TextBlock Text="メールアドレス" FontWeight="SemiBold" />
            <TextBox x:Name="EmailTextBox" PlaceholderText="メールアドレスを入力してください" />
            <TextBlock Text="パスワード" FontWeight="SemiBold" />
            <PasswordBox x:Name="PasswordTextBox" PlaceholderText="パスワードを入力してください" />
            <TextBlock Text="パスワード（確認）" FontWeight="SemiBold" />
            <PasswordBox x:Name="ConfirmPasswordTextBox" PlaceholderText="パスワードを再入力してください" />
            <Button x:Name="RegisterButton" Content="登録" Height="40" Click="RegisterButton_Click" BorderThickness="2,2,1,2" Width="279" FontSize="20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                <Button Content="ログインページへ" Click="GoToLoginPage_Click" Width="125" />
                <Button Content="メインページへ戻る" Click="GoBackToMainPage_Click" Width="136" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>