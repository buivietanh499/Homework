<Page
    x:Class="Group4_project.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Group4_project"
    Background="White">
    <Grid Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="741">
        <TextBlock Text="会員登録"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,220"/>
        <StackPanel Spacing="15" Margin="0,100,0,0">
            <TextBlock Text="名前" FontWeight="SemiBold" FontSize="14"/>
            <TextBox x:Name="NameTextBox"
                     PlaceholderText="名前を入力してください"
                     FontSize="16"
                     Height="45"
                     Padding="10"
                     BorderBrush="#ccc"
                     BorderThickness="2"
                     CornerRadius="6" />
            <TextBlock Text="メールアドレス" FontWeight="SemiBold" FontSize="14"/>
            <TextBox x:Name="EmailTextBox"
                     PlaceholderText="メールアドレスを入力してください"
                     FontSize="16"
                     Height="45"
                     Padding="10"
                     BorderBrush="#ccc"
                     BorderThickness="2"
                     CornerRadius="6"/>
            <TextBlock Text="パスワード" FontWeight="SemiBold" FontSize="14"/>
            <PasswordBox x:Name="PasswordTextBox"
                         PlaceholderText="パスワードを入力してください"
                         FontSize="16"
                         Height="45"
                         Padding="10"
                         BorderBrush="#ccc"
                         BorderThickness="2"
                         CornerRadius="6"/>
            <TextBlock Text="パスワード（確認）" FontWeight="SemiBold" FontSize="14"/>
            <PasswordBox x:Name="ConfirmPasswordTextBox"
                         PlaceholderText="パスワードを再入力してください"
                         FontSize="16"
                         Height="45"
                         Padding="10"
                         BorderBrush="#ccc"
                         BorderThickness="2"
                         CornerRadius="6"/>
            <Button x:Name="RegisterButton"
                    Content="登録"
                    Height="48"
                    Width="339"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#0078D7"
                    Foreground="White"
                    CornerRadius="6"
                    Click="RegisterButton_Click" Margin="0,5,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,0,0,0">
                <Button Content="ログインページへ"
                        Click="GoToLoginPage_Click"
                        Width="155"
                        Height="40"
                        Background="Transparent"
                        BorderBrush="#0078D7"
                        BorderThickness="2"
                        Foreground="#0078D7"
                        CornerRadius="6"/>
                <Button Content="メインページへ戻る"
                        Click="GoBackToMainPage_Click"
                        Width="155"
                        Height="40"
                        Background="Transparent"
                        BorderBrush="#0078D7"
                        BorderThickness="2"
                        Foreground="#0078D7"
                        CornerRadius="6" HorizontalAlignment="Right"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>