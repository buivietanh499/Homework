<Page
    x:Class="Group4_project.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Group4_project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Spacing="20">
            <TextBlock Text="ログイン" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:ConnectionId='2' x:Name="EmailTextBox" PlaceholderText="メール" />
            <PasswordBox x:ConnectionId='3' x:Name="PasswordTextBox" PlaceholderText="パスワード" />
            <Button x:ConnectionId='4' Content="OK"                           />
            <HyperlinkButton x:ConnectionId='5' Content="アカウントをお持ちでない方はこちら" 
                                                
                 HorizontalAlignment="Right"/>

            <Button x:ConnectionId='6' Content="戻る"                                
        HorizontalAlignment="Right" Width="80"/>

        </StackPanel>
    </Grid>
</Page>

