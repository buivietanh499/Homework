<Page
    x:Class="Group4_project.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#FF0078D7">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" CornerRadius="0,0,0,0">
            <Image Source="fuji_mountain_2.jpg" Stretch="UniformToFill" />
        </Border>
        <Border Grid.Column="1" Background="White" CornerRadius="0,0,0,0" Padding="40" Margin="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="378" Spacing="20" Height="240">
                <TextBlock Text="旅行要約" FontSize="28" TextAlignment="Center" />
                <Button Content="ログイン"
                      Width="280"
                      Height="48"
                      Background="#0078D7"
                      Foreground="White"
                      FontSize="18"
                      FontWeight="Medium"
                      CornerRadius="6"
                      Click="LoginButton_Click" HorizontalAlignment="Center"/>
                <Button Content="会員登録"
                      Width="280"
                      Height="48"
                      Background="Transparent"
                      BorderBrush="#0078D7"
                      BorderThickness="2"
                      Foreground="#0078D7"
                      FontSize="18"
                      FontWeight="Medium"
                      CornerRadius="6"
                      Click="RegisterButton_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>