<Page
    x:Class="Group4_project.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Group4_project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">
    <Grid Padding="30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320" Spacing="20">
            <TextBlock Text="ログイン"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#222"
                       HorizontalAlignment="Center"/>
            <TextBox x:Name="EmailTextBox"
                     PlaceholderText="メール"
                     FontSize="16"
                     Height="45"
                     Padding="10"
                     BorderBrush="#ccc"
                     BorderThickness="2"
                     CornerRadius="6"/>
            <PasswordBox x:Name="PasswordTextBox"
                         PlaceholderText="パスワード"
                         FontSize="16"
                         Height="45"
                         Padding="10"
                         BorderBrush="#ccc"
                         BorderThickness="2"
                         CornerRadius="6"/>
            <Button Content="OK"
                    Click="LoginButton_Click"
                    Height="45"
                    Background="#0078D7"
                    Foreground="White"
                    FontSize="18"
                    FontWeight="SemiBold"
                    CornerRadius="6"/>
            <HyperlinkButton Content="アカウントをお持ちでない方はこちら"
                             Click="GoToRegisterPage_Click"
                             HorizontalAlignment="Right"
                             Foreground="#0078D7"
                             FontSize="14"
                             Margin="0,10,0,0"/>
            <Button Content="戻る"
                    Click="GoBackToMainPage_Click"
                    HorizontalAlignment="Right"
                    Width="80"
                    Height="35"
                    Background="Transparent"
                    BorderBrush="#0078D7"
                    BorderThickness="1"
                    Foreground="#0078D7"
                    FontSize="14"
                    CornerRadius="6"/>
        </StackPanel>
    </Grid>
</Page>









