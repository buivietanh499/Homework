<Page
    x:Class="Group4_project.TravelBookPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Group4_project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="Content" Background="white">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="TextBlock1" HorizontalAlignment="Left" Margin="359,33,0,0" TextWrapping="Wrap" Text="予約" VerticalAlignment="Top" RenderTransformOrigin="0.062,-2.205" FontSize="36" FontWeight="Bold" FontFamily="Arial Black" Grid.Column="1"/>
        <StackPanel    Padding="20" Spacing="12" Orientation="Horizontal" Margin="150,100,150,172" Grid.ColumnSpan="2" FocusVisualSecondaryBrush="#99FFFFFF" Canvas.ZIndex="1" FocusVisualPrimaryBrush="White">
            <TextBlock x:Name="TextBlock2" Text="プラン"  FontSize="24" FontWeight="Bold" FocusVisualPrimaryBrush="#FF110D68" Foreground="#FF2342BB" Margin="0,10,32,0"/>

            <ComboBox x:Name="DestinationBox"  Width="180" Height="50" Margin="0,0,109,0" FontSize="16" SelectionChanged="DestinationBox_SelectionChanged">
                <ComboBoxItem Content="北海道"/>
                <ComboBoxItem Content="京都"/>
                <ComboBoxItem Content="沖縄"/>
            </ComboBox>

            <TextBlock x:Name="TextBlock3" Text="日程" FontSize="24" Foreground="#FF2342BB" FontWeight="Bold" Margin="250,10,40,0" />
            <ComboBox x:Name="PlanBox"  Width="180" Height="50" HorizontalAlignment="Left" FontSize="16" SelectionChanged="PlanBox_SelectionChanged">
                <ComboBoxItem Content="2025/05/20"/>
                <ComboBoxItem Content="2025/05/25"/>
                <ComboBoxItem Content="2025/05/30"/>
            </ComboBox>
        </StackPanel>

        <TextBlock x:Name="TextBlock4" HorizontalAlignment="Left" Margin="248,271,0,0" TextWrapping="Wrap" Text="人数" VerticalAlignment="Top" RenderTransformOrigin="0.062,-2.205" Foreground="#FF2342BB" FontSize="24" FontWeight="Bold" Grid.Column="1"/>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Margin="360,262,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="180" Height="50" FontSize="24" Grid.Column="1" Padding="0,3,6,6" TextChanged="TextBox1_TextChanged"/>
        <Button x:Name="Sign_up" Content="登録" Margin="38,574,0,0" VerticalAlignment="Top" Width="200" Click="Sign_up_Click" Background="#33FFFFFF" BorderBrush="#FFA8A7FC" Height="100" FontSize="36" FontWeight="Bold" FontFamily="Yu Gothic UI" FocusVisualPrimaryBrush="#CCCEC7F6" Foreground="#FF66517B" Grid.Column="1"/>
        <Button x:Name="Back" Content="戻る" Margin="572,574,0,0" VerticalAlignment="Top" Width="200" Click="Back_Click"  Background="#33FFFFFF" BorderBrush="#FFA8A7FC" Height="100" FontSize="36" FontWeight="Bold" FontFamily="Yu Gothic UI" FocusVisualPrimaryBrush="#CC030202" Foreground="#FF645870" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="143,360,0,0" TextWrapping="Wrap" Text="登録内容" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Grid.Column="1"/>

        <TextBlock x:Name="SelectedText"  HorizontalAlignment="Left" Margin="143,407,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="97" Width="539" Grid.Column="1" FontSize="20" CharacterSpacing="300" SelectionHighlightColor="#FFB9ECF3"  />

        <TextBlock x:Name="ErrorMsgBox" HorizontalAlignment="Left" Height="42" Margin="92,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="326" Grid.ColumnSpan="2" FontWeight="Bold" FocusVisualPrimaryBrush="Red" FontSize="20" Foreground="Red"/>

    </Grid>
</Page>
