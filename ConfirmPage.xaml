<Page
    x:Class="Group4_project.ConfirmPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Group4_project"
    Background="White"
    Padding="30">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Tiêu đề -->
        <TextBlock Text="予約取り消し・確認"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0" />
        <!-- Danh sách đặt chuyến với checkbox -->
        <ListBox x:Name="CheckListBox"
                 Grid.Row="1"
                 SelectionMode="Multiple"
                 BorderThickness="2"
                 BorderBrush="Black"
                 Padding="10" />
        <!-- Nút chức năng -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="40"
                    Margin="0,20,0,0"
                    Grid.Row="2">
            <Button Content="取消" Width="120" Click="Delete_Click"/>
            <Button Content="戻る" Width="120" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>